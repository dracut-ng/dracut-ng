# Tiny container with busybox
# GNU coreutils should not be installed

FROM docker.io/alpine:edge

RUN apk add --no-cache \
    bash \
    e2fsprogs \
    eudev \
    findmnt \
    gcc \
    grep \
    kmod-dev \
    linux-virt \
    make \
    musl-dev  \
    musl-fts-dev \
    qemu-system-$(uname -m)
